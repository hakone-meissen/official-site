<!doctype html>
<html lang='ja'>
  <head prefix="og: http://ogp.me/ns#">
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-45NB0ER8HL"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-45NB0ER8HL');
    </script>
    <meta charset='utf-8'>
    <meta http-equiv='x-ua-compatible' content='ie=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no'>
    <%= partial 'partials/dns' %>
    <link rel="apple-touch-icon" type="image/png" href="/images/apple-touch-icon-180x180.png">
    <link rel="icon" type="image/png" href="/images/icon-192x192.png">
    <title><%= current_page.data.title || '箱根マイセンアンティーク美術館' %></title>
    <meta name='description' content='<%= current_page.data.description %>'%>
    <%= stylesheet_link_tag 'common' %>
    <meta property="og:url" content="http://www.hakone-meissen.com/<%= current_page.data.path %>">
    <meta property="og:type" content="site">
    <meta property="og:title" content="<%= current_page.data.title %>">
    <meta property="og:description" content="<%= current_page.data.description %>">
    <meta property="og:site_name" content="箱根マイセンアンティーク美術館">
    <meta property="og:image" content="http://www.hakone-meissen.com/images/OGP.png">
    <style>
    <%= partial 'partials/fv.css' %>
    </style>
    <%- if current_page.data.path == 'inquiry.html' %>
      <script src="https://sdk.form.run/js/v2/formrun.js"></script>
    <%- end %>
  </head>
  <body id='root'>
  <input type='checkbox' id='drawer'>
  <%= partial 'partials/header' %>
  <main class='siteMain'>
    <%= yield %>
  </main>
  <%= partial 'partials/footer' %>
  <%= javascript_include_tag 'site' %>
  </body>
</html>
